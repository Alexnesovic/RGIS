@page
@model LevelStat_AlexNesovic.Pages.RegisterModel

<script src="~/js/theme.js"></script>

<h2>Ustvari račun</h2>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <p style="color:red">@Model.Error</p>
}

<form method="post">
    <label>Email</label><br />
    <input type="email" asp-for="Email" required /><br><br>

    <label>Geslo</label><br />
    <input type="password" asp-for="Password" required /><br><br>

    <button type="submit">Registriraj</button>
</form>

<br>
<a href="/Login">Nazaj na prijavo</a>
